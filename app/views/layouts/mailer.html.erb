<html>
<head>
  <style type="text/css">
      <!--
      Add all mailer-specific styles here
      -->
      body {
          color: #34495E !important;
      }

      .mail-body {
          text-align: center;
      }

      .btn-success {
          color: #FFF !important;
          background-color: #5CB85C;
          display: inline-block;
          margin-bottom: 0;
          font-weight: normal;
          text-align: center;
          vertical-align: middle;
          cursor: pointer;
          border: 1px solid transparent;
          white-space: nowrap;
          padding: 6px 12px;
          font-size: 14px;
          line-height: 1.42857;
          border-radius: 4px;
          -moz-user-select: none;
      }

      .text-muted {
          color: gray !important;
          font-size: 12px !important;
      }

      .incident-block {
          padding: 20px;
          border-radius: 2px;
          border: 2px solid rgba(52, 73, 94, 0.67);
          margin-bottom: 20px;
      }

      .incident-name {
          font-size: 20px;
      }

      .incident-component {
          float: right;
      }

      .text-danger {
          color: firebrick;
      }

      .text-warning {
          color: yellow;
      }
      .incident-updated-at {
          color: lightgray;
      }
      a {
          text-decoration: none;
      }
  </style>
</head>
<body>
<div>
  <%= yield %>
</div>
<% if @activation_key %>
    <% unsubscribe_path = Statusify.app_url + '/subscribers/unsubscribe/' + @activation_key %>
    <div class="unsubscribe text-muted">Click <%= link_to 'here', unsubscribe_path %> to unsubscribe from these mails.
    </div>
<% end %>
</body>
</html>
